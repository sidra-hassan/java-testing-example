pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello maven'
                sh 'mvn --version'
            }
        }
        stage ('build'){
            steps {
                sh 'mvn install'
            }
        }    
        stage ('test'){
            steps{
            sh 'mvn test'
            }
        }
    }   
            post{
                always{
                    archiveArtifacts artifacts: 'build/libs/**/*.jar', fingerprint: true
                }
            }
        
    
}
